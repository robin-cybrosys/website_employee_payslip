<odoo>
    <template id="portal_my_home_menu_payslip" name="Portal layout : payslip menu entries" inherit_id="portal.portal_breadcrumbs" priority="30">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'payslip'" t-attf-class="breadcrumb-item #{'active ' if not payslip else ''}">
                <a t-if="payslip" t-attf-href="/my/payslips?{{ keep_query() }}">Employee Payslip1</a>
                <t t-else="">Employee Payslip</t>
            </li>
            <li t-if="payslip" class="breadcrumb-item active">
                <t t-esc="payslip.name" t-if="payslip.name != '/'"/>
                <t t-else=""><em>Draft Invoice1</em></t>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_payslip" name="Show Payslips" inherit_id="portal.portal_my_home" customize_show="True" priority="1">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Employee Payslips</t>
                <t t-set="url" t-value="'/my/payslips'"/>
                <t t-set="placeholder_count" t-value="'payslip_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_payslips" name="My Payslips">
      <t t-call="portal.portal_layout">
<!--        <t t-set="breadcrumbs_searchbar" t-value="True"/>-->

<!--        <t t-call="portal.portal_searchbar">-->
<!--            <t t-set="title">Payslips</t>-->
<!--        </t>-->
        <t t-if="not payslips">
            <p>There are currently no payslips for your account.</p>
        </t>
        <t t-if="payslips" t-call="portal.portal_table">
            <thead>
                <tr class="active">
                    <th>Payslip #</th>
                    <th>Payslip</th>
                    <th>From</th>
                    <th>To</th>
                    <th class='d-none d-md-table-cell'>Status</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="payslips" t-as="payslip">
                    <tr>
                        <td>
                            <a t-attf-href="/print/report" >
                               <t t-esc="payslip.number"/>
                            </a>
                        </td>
                        <td>
                            <a t-attf-href="/print/report" >
                               <t t-esc="payslip.name"/>
                            </a>
                        </td>
                        <td><span t-field="payslip.date_from"/></td>
                        <td><span t-field="payslip.date_to"/></td>
<!--                        <td class='d-none d-md-table-cell'><span t-field="payslip.date_to"/></td>-->
                        <td class="tx_status">
                            <t t-if="payslip.state == 'done' ">
                                <span class="badge badge-pill badge-success"><i class="fa fa-fw fa-check" aria-label="Opened" title="Confirm" role="img"></i><span class="d-none d-md-inline"> Confirmed</span></span>
                            </t>

                            <t t-if="payslip.state == 'cancel'">
                                <span class="badge badge-pill badge-warning"><i class="fa fa-fw fa-remove" aria-label="Cancelled" title="Cancelled" role="img"></i><span class="d-none d-md-inline"> Cancelled</span></span>
                            </t>
                        </td>
                    </tr>
                </t>
            </tbody>
        </t>
      </t>
    </template>

